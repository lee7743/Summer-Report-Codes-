hr_c    = 72.0 # Beats/minute
sv_c    = 70.0 # mL
tpr_c   = 1.2*1333.22 # mmHg*sec/mL
c_c     = 2/1333.22 # mL/mmHg
valve = 1.0

t_c,sol_c,q1_c = solve_rc(p0_c,hr_c,sv_c,tpr_c,c_c,valve)

plt.figure(figsize=(10,3))
